model Absensi {
  id        Int           @id @default(autoincrement())
  userId    Int
  kelasId   Int
  jadwalId  Int? // opsional, relasi ke JadwalAbsensi
  tanggal   DateTime
  status    StatusAbsensi
  createdAt DateTime      @default(now())

  // RELASI
  user   User           @relation(fields: [userId], references: [id])
  kelas  Kelas          @relation(fields: [kelasId], references: [id])
  jadwal JadwalAbsensi? @relation(fields: [jadwalId], references: [id])
}

model AbsensiSetting {
  id        Int      @id @default(autoincrement())
  kelasId   Int      @unique
  maxAbsen  Int      @default(2) // batas absen per hari
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  kelas Kelas @relation(fields: [kelasId], references: [id])
}

enum Role {
  admin
  pengajar
  santri
}

enum StatusAbsensi {
  hadir
  izin
  alpha
  sakit
}

enum StatusIzin {
  menunggu
  disetujui
  ditolak
}

enum StatusSubmission {
  pending
  reviewed
  rejected
}

enum Hari {
  minggu
  senin
  selasa
  rabu
  kamis
  jumat
  sabtu
}

model Izin {
  id        Int        @id @default(autoincrement())
  userId    Int
  kelasId   Int
  tanggal   DateTime
  alasan    String
  status    StatusIzin @default(menunggu)
  createdAt DateTime   @default(now())

  user  User  @relation(fields: [userId], references: [id])
  kelas Kelas @relation(fields: [kelasId], references: [id])
}

model JadwalAbsensi {
  id         Int      @id @default(autoincrement())
  kelasId    Int
  hari       Hari
  jamMulai   String
  jamSelesai String
  tanggal    DateTime
  createdAt  DateTime @default(now())

  kelas   Kelas     @relation(fields: [kelasId], references: [id])
  absensi Absensi[]

  @@unique([kelasId, tanggal])
}

model Kelas {
  id        Int     @id @default(autoincrement())
  namaKelas String
  deskripsi String?

  // ✅ SANTRI
  santri User[] @relation("SantriKelas")

  // ✅ PENGAJAR
  pengajar User[] @relation("PengajarKelas")

  absensiSetting AbsensiSetting? // relasi ke setting absen

  absensi Absensi[] // relasi ke absensi
  jadwal  JadwalAbsensi[]
  izin    Izin[]
  tugas   Tugas[]
}

model LogAktivitas {
  id        Int      @id @default(autoincrement())
  userId    Int
  aktivitas String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model MataPelajaran {
  id   Int    @id @default(autoincrement())
  nama String
  kode String

  tugas Tugas[]

  createdAt DateTime @default(now())

  @@unique(kode)
}

model Nilai {
  id Int @id @default(autoincrement())

  submissionId Int      @unique
  nilai        Int
  catatan      String?
  createdAt    DateTime @default(now())

  submission Submission @relation(fields: [submissionId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  message   String
  level     String // warning | critical
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Profile {
  id           Int       @id @default(autoincrement())
  userId       Int       @unique
  namaLengkap  String
  noHp         String?
  alamat       String?
  fotoUrl      String?
  tanggalLahir DateTime?
  jenisKelamin String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Submission {
  id Int @id @default(autoincrement())

  userId  Int
  tugasId Int

  fileUrl String?
  linkUrl String?

  status      StatusSubmission @default(pending)
  submittedAt DateTime         @default(now())

  // Relasi
  user  User  @relation(fields: [userId], references: [id])
  tugas Tugas @relation(fields: [tugasId], references: [id])

  nilai Nilai?

  @@unique([userId, tugasId])
}

model Tugas {
  id              Int @id @default(autoincrement())
  kelasId         Int
  mataPelajaranId Int

  title       String
  description String?
  deadline    DateTime
  createdBy   Int
  createdAt   DateTime @default(now())

  kelas         Kelas         @relation(fields: [kelasId], references: [id])
  mataPelajaran MataPelajaran @relation(fields: [mataPelajaranId], references: [id])
  creator       User          @relation("TugasDibuat", fields: [createdBy], references: [id])

  submission Submission[]
}

model User {
  id          Int       @id @default(autoincrement())
  name        String?
  email       String    @unique
  password    String?
  activatedAt DateTime?
  isActive    Boolean   @default(true)

  otp          String? // OTP sementara untuk aktivasi / reset
  otpExpiresAt DateTime? // Waktu expired OTP

  role      Role    @default(santri)
  kelasId   Int?
  kelas     Kelas?  @relation("SantriKelas", fields: [kelasId], references: [id])
  kelasAjar Kelas[] @relation("PengajarKelas")

  createdAt DateTime  @default(now())
  deletedAt DateTime?

  absensi       Absensi[]
  izin          Izin[]
  tugasDibuat   Tugas[]        @relation("TugasDibuat")
  submission    Submission[]
  log           LogAktivitas[]
  profile       Profile?
  notifications Notification[]
}

