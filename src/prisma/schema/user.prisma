model User {
  id           Int        @id @default(autoincrement())
  name         String?
  email        String     @unique
  password     String?
  activatedAt  DateTime?
  isActive     Boolean    @default(true)

  otp          String?    // OTP sementara untuk aktivasi / reset
  otpExpiresAt DateTime?  // Waktu expired OTP

  role         Role       @default(santri)
  kelasId      Int?
  kelas        Kelas?     @relation("SantriKelas", fields: [kelasId], references: [id])
  kelasAjar    Kelas[]    @relation("PengajarKelas")

  createdAt    DateTime   @default(now())
  deletedAt    DateTime?

  absensi      Absensi[]
  izin         Izin[]
  tugasDibuat  Tugas[]    @relation("TugasDibuat")
  submission   Submission[]
  nilai        Nilai[]
  log          LogAktivitas[]
  profile      Profile?
  notifications Notification[]
}
