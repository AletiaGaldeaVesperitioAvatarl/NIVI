model User {
  id          Int        @id @default(autoincrement())
  name        String
  email       String     @unique

  // ðŸ”‘ AUTH
  password        String?
  activationToken String?
  activatedAt     DateTime?

  role        Role       @default(santri)

  // SANTRI
  kelasId     Int?
  kelas       Kelas?     @relation("SantriKelas", fields: [kelasId], references: [id])

  // PENGAJAR
  kelasAjar   Kelas[]    @relation("PengajarKelas")

    mataPelajaran MataPelajaran[]

  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  deletedAt   DateTime?

  absensi     Absensi[]
  izin        Izin[]
  tugasDibuat Tugas[]    @relation("TugasDibuat")
  submission  Submission[]
  nilai       Nilai[]
  log         LogAktivitas[]
  profiles    Profile[]
   notifications Notification[]
}
