model Kelas {
  id          Int        @id @default(autoincrement())
  namaKelas   String
  deskripsi   String?    

  // ✅ SANTRI
  santri      User[]     @relation("SantriKelas")

  // ✅ PENGAJAR
  pengajar    User[]     @relation("PengajarKelas")

   mataPelajaran MataPelajaran[]

  absensi     Absensi[]
  izin        Izin[]
  tugas       Tugas[]
}
