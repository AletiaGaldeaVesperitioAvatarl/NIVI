model Submission {
  id          Int      @id @default(autoincrement())

  userId      Int
  tugasId     Int

  fileUrl     String?
  linkUrl     String?

  status      StatusSubmission @default(pending)
  submittedAt DateTime         @default(now())
  deletedAt   DateTime?

  // Relasi
  user        User   @relation(fields: [userId], references: [id])
  tugas       Tugas  @relation(fields: [tugasId], references: [id])

  nilai       Nilai? 
  @@unique([userId, tugasId])
}
