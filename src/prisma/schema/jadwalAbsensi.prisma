model JadwalAbsensi {
  id         Int      @id @default(autoincrement())
  kelasId    Int
  hari       Hari
  jamMulai   String
  jamSelesai String
  tanggal    DateTime
  createdAt  DateTime @default(now())

  kelas      Kelas    @relation(fields: [kelasId], references: [id])
  absensi    Absensi[]

  @@unique([kelasId, tanggal, jamMulai]) // supaya tidak bentrok
}
