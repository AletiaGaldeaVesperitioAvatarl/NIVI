model Absensi {
  id        Int           @id @default(autoincrement())
  userId    Int
  kelasId   Int
  tanggal   DateTime
  status    StatusAbsensi
  createdAt DateTime      @default(now())

  user  User  @relation(fields: [userId], references: [id])
  kelas Kelas @relation(fields: [kelasId], references: [id])
}

enum Role {
  admin
  pengajar
  santri
}

enum StatusAbsensi {
  hadir
  izin
  alpha
}

enum StatusIzin {
  menunggu
  disetujui
  ditolak
}

enum StatusSubmission {
  tepat_waktu
  terlambat
}

model Izin {
  id        Int        @id @default(autoincrement())
  userId    Int
  kelasId   Int
  tanggal   DateTime
  alasan    String
  status    StatusIzin @default(menunggu)
  createdAt DateTime   @default(now())

  user  User  @relation(fields: [userId], references: [id])
  kelas Kelas @relation(fields: [kelasId], references: [id])
}

model Kelas {
  id        Int      @id @default(autoincrement())
  namaKelas String
  deskripsi String?
  createdAt DateTime @default(now())

  users   User[]
  absensi Absensi[]
  izin    Izin[]
  tugas   Tugas[]
}

model LogAktivitas {
  id        Int      @id @default(autoincrement())
  userId    Int
  aktivitas String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Nilai {
  id        Int      @id @default(autoincrement())
  userId    Int
  tugasId   Int
  nilai     Int
  catatan   String?
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  tugas Tugas @relation(fields: [tugasId], references: [id])
}

model Profile {
  id           Int       @id @default(autoincrement())
  userId       Int       @unique
  namaLengkap  String
  noHp         String?
  alamat       String?
  fotoUrl      String?
  tanggalLahir DateTime?
  jenisKelamin String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Submission {
  id          Int              @id @default(autoincrement())
  tugasId     Int
  userId      Int
  fileUrl     String?
  linkUrl     String?
  submittedAt DateTime         @default(now())
  status      StatusSubmission

  tugas Tugas @relation(fields: [tugasId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}

model Tugas {
  id          Int      @id @default(autoincrement())
  kelasId     Int
  title       String
  description String?
  deadline    DateTime
  createdBy   Int
  createdAt   DateTime @default(now())

  kelas      Kelas        @relation(fields: [kelasId], references: [id])
  creator    User         @relation("TugasDibuat", fields: [createdBy], references: [id])
  submission Submission[]
  nilai      Nilai[]
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(santri)
  kelasId   Int?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  kelas       Kelas?         @relation(fields: [kelasId], references: [id])
  profile     Profile?
  absensi     Absensi[]
  izin        Izin[]
  tugasDibuat Tugas[]        @relation("TugasDibuat")
  submission  Submission[]
  nilai       Nilai[]
  log         LogAktivitas[]
}

